<?xml version="1.0"?>
<config>
    <adminhtml>
        <layout>
            <updates>
                <novaposhta>
                    <file>novaposhta.xml</file>
                </novaposhta>
            </updates>
        </layout>
        <events>
            <core_block_abstract_to_html_after>
                <observers>
                    <novaposhta_custom_order_view_info>
                        <class>Ak_NovaPoshta_Model_Observer</class>
                        <method>getSalesOrderViewInfo</method>
                    </novaposhta_custom_order_view_info>
                </observers>
            </core_block_abstract_to_html_after>
        </events>
    </adminhtml>
    <modules>
        <Ak_NovaPoshta>
            <version>0.1.2</version>
        </Ak_NovaPoshta>
    </modules>
    <global>
        <models>
            <novaposhta>
                <class>Ak_NovaPoshta_Model</class>
                <resourceModel>novaposhta_resource</resourceModel>
            </novaposhta>
            <novaposhta_resource>
                <class>Ak_NovaPoshta_Model_Resource</class>
                <entities>
                    <city>
                        <table>novaposhta_city</table>
                    </city>
                    <warehouse>
                        <table>novaposhta_warehouse</table>
                    </warehouse>
                    <novaposhta_quote_address>
                        <table>novaposhta_quote_address</table>
                    </novaposhta_quote_address>
                    <novaposhta_order_address>
                        <table>novaposhta_order_address</table>
                    </novaposhta_order_address>
                </entities>
            </novaposhta_resource>
        </models>
        <blocks>
            <novaposhta>
                <class>Ak_NovaPoshta_Block</class>
            </novaposhta>
        </blocks>
        <helpers>
            <novaposhta>
                <class>Ak_NovaPoshta_Helper</class>
            </novaposhta>
        </helpers>
        <resources>
            <novaposhta_setup>
                <setup>
                    <module>Ak_NovaPoshta</module>
                </setup>
            </novaposhta_setup>
        </resources>
        <events>
            <checkout_controller_onepage_save_shipping_method>
                <observers>
                    <checkout_controller_onepage_save_shipping_method_novap>
                        <type>model</type>
                        <class>Ak_NovaPoshta_Model_Observer</class>
                        <method>saveShippingMethod</method>
                    </checkout_controller_onepage_save_shipping_method_novap>
                </observers>
            </checkout_controller_onepage_save_shipping_method>
            <sales_model_service_quote_submit_after>
                <observers>
                    <checkout_controller_onepage_save_shipping_method_novap>
                        <type>model</type>
                        <class>Ak_NovaPoshta_Model_Observer</class>
                        <method>saveOrderAfterAll</method>
                    </checkout_controller_onepage_save_shipping_method_novap>
                </observers>
            </sales_model_service_quote_submit_after>
        </events>
        <fieldsets>
            <sales_convert_quote_address>
                <warehouse_id>
                    <to_order_address>*</to_order_address>
                </warehouse_id>
                <warehouse_label>
                    <to_order_address>*</to_order_address>
                </warehouse_label>
            </sales_convert_quote_address>
        </fieldsets>
    </global>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Ak_NovaPoshta_Adminhtml before="Mage_Adminhtml">Ak_NovaPoshta_Adminhtml</Ak_NovaPoshta_Adminhtml>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <crontab>
        <jobs>
            <novaposhta_import_city_and_warehouse>
                <schedule>
                    <cron_expr>1 2 * * *</cron_expr>
                </schedule>
                <run>
                    <model>ak_novaposhta/import::run</model>
                </run>
            </novaposhta_import_city_and_warehouse>
        </jobs>
    </crontab>
    <frontend>
        <routers>
            <novaposhta>
                <use>standard</use>
                <args>
                    <module>Ak_NovaPoshta</module>
                    <frontName>novaposhta</frontName>
                </args>
            </novaposhta>
        </routers>
        <secure_url>
            <novaposhta_checkout>/novaposhta/checkout</novaposhta_checkout>
        </secure_url>
        <layout>
            <updates>
                <novaposhta>
                    <file>novaposhta.xml</file>
                </novaposhta>
            </updates>
        </layout>
    </frontend>
    <default>
        <carriers>
            <novaposhta>
                <!-- disabled by default not to propose unconfigured shipping method to customer -->
                <active>0</active>
                <!-- allow only for specific countries flag -->
                <sallowspecific>1</sallowspecific>
                <!-- allow only for Ukraine -->
                <specificcountry>UA</specificcountry>
                <!-- carrier model -->
                <model>novaposhta/carrier_novaPoshta</model>
                <!-- carrier title -->
                <title>Новая Почта</title>
                <!-- error message -->
                <specificerrmsg>Этот способ доставки на текущий момент не доступен. Если вы желаете, чтобы мы доставили заказ Новой Почтой, обратитесь к менеджеру интернет-магазина.</specificerrmsg>
                <api_url>https://api.novaposhta.ua/v2.0/xml/</api_url>
                <enable_log>0</enable_log>
                <shipping_offset>1</shipping_offset>
            </novaposhta>
        </carriers>
    </default>
</config>
